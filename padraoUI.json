{
	"designSystem": {
		"nome": "HubMaster Visual Standard",
		"descricao": "Padrões de design para manter a consistência visual nas páginas web do HubMaster.",
		"palette": {
			"background": {
				"primary": "#121212",
				"secondary": "#1E1E1E",
				"surface": "#242424"
			},
			"primary": {
				"main": "#9D4BFF",
				"light": "#B880FF"
			},
			"text": {
				"primary": "#FFFFFF",
				"secondary": "#B3B3B3",
				"disabled": "#5E5E5E"
			},
			"common": {
				"white": "#FFFFFF",
				"black": "#000000"
