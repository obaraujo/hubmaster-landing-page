			"body": {
				"fontFamily": "'Inter', 'Roboto', 'Helvetica', 'Arial', sans-serif",
				"fontWeight": 400,
				"color": "#B3B3B3",
				"lineHeight": "1.6"
			},
			"fontSizes": {
				"h1": "3.5rem",
				"h2": "2.5rem",
				"h3": "1.75rem",
				"h4": "1.25rem",
				"body1": "1rem",
				"body2": "0.875rem",
				"caption": "0.75rem"
			}
		},
		"components": {
			"button": {
				"primary": {
					"backgroundColor": "#9D4BFF",
					"color": "#FFFFFF",
					"fontWeight": 600,
					"borderRadius": "8px",
