					"border": "none",
					"hover": {
						"backgroundColor": "#B880FF"
					}
				},
				"secondary": {
					"backgroundColor": "#1E1E1E",
					"color": "#FFFFFF",
					"fontWeight": 500,
					"borderRadius": "8px",
					"padding": "12px 24px",
					"border": "1px solid #242424",
					"hover": {
						"backgroundColor": "#242424"
					}
				}
			},
			"card": {
				"backgroundColor": "#1E1E1E",
				"borderRadius": "12px",
				"padding": "24px",
				"boxShadow": "none"
			},
			"navBar": {
				"backgroundColor": "#121212",
				"padding": "16px 32px",
				"linkColor": "#B3B3B3",
