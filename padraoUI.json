			"feedback": {
				"success": "#3ED17C",
				"warning": "#FFB800",
				"error": "#FF4D4D"
			}
		},
		"typography": {
			"fontFamily": "'Inter', 'Roboto', 'Helvetica', 'Arial', sans-serif",
